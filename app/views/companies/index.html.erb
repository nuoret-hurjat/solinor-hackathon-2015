<p id="notice"><%= notice %></p>

<h1>Listing Companies</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Logo</th>
      <th>Description</th>
      <th>Admin edited</th>
      <th>Technologies</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.name, company %></td>
        <% unless company.logo == "tyhjÃ¤" %>
          <td><%= image_tag(company.logo, :height => '32', :width => '32') %></td>
        <% else %>
          <td><%= image_tag('noav.png', :height => '32', :width => '32') %></td>
        <% end %>
        <td><%= company.description %></td>
        <td><%= company.admin_edited %></td>
        <td>
          <ul class="list-inline">
            <% company.technologies.each do |tech| %>
              <li>
                <a href="<%= technology_path(tech) %>" target="_blank">
                  <img src="<%= tech.logo %>">
                </a>
              </li>
            <% end %>
          </ul>
        </td>
  <% if not current_user.nil? %>        
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <% end %>    
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if not current_user.nil? %>  
  <%= link_to 'New Company', new_company_path %>
<% end %>
